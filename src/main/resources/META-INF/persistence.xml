<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">

    <persistence-unit name="SomethingPU" transaction-type="JTA">
        <jta-data-source>jdbc/__default</jta-data-source>
        <class>fish.payara.support.jmstest.SomethingPersistent</class>
        <properties>
            <!-- Example Hibernate/JPA properties for DDL generation -->
            <property name="eclipselink.target-database" value="org.eclipse.persistence.platform.database.H2Platform"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="eclipselink.session.sequence.value-read-query" value="SELECT IDENTITY()"/> 
            <property name="hibernate.show_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>

  